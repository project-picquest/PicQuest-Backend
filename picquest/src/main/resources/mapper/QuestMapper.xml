<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bvm.picquest.mapper.QuestMapper">
    <select id="findByDate" resultType="Quest">
        select * from quest
        <where>
            date=#{date}
        </where>
    </select>
    <select id="findQuestTransferFormByDate" resultType="QuestTransferForm">
        select a.id, a.img, case when user_email is not null then true else false end as isCompleted
        from (select * from quest where date=#{date}) a join (select * from complete_quest where user_email=#{email}) b
        on a.id = b.quest_id
    </select>
    <select id="findTodaysQuestByIndex" resultType="Quest">
        select * from quest
        <where>
            date=CURDATE()
        </where>
        limit 1 offset #{index}
    </select>
